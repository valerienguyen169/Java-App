      <script>
          function transferMoney() {
              // Assuming you have a function to perform the money transfer logic
              // For simplicity, we are using random data here
              const fromAccount = "123456";
              const toAccount = "789012";
              const amount = 100.00;
              const date = new Date().toLocaleString();
      
              // Update statement history table
              const statementTableBody = document.getElementById("statementTableBody");
